<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email", class: "border rounded py-2 px-3 w-full" } %>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password", class: "border rounded py-2 px-3 w-full" } %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Log in", class: 'bg-blue-500 text-white px-4 py-2 rounded-md' %>
  </div>
<% end %>
